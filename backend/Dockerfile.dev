# Existing lines for installing dependencies
RUN apt-get update && apt-get install -y postgresql-client
RUN pip install --upgrade pip

# Create a non-root user `appuser` with no password
# `appuser` will be the user name, feel free to choose a name that suits your application
RUN addgroup --system appuser && adduser --system --group appuser

WORKDIR /backend

# Change ownership of the /backend directory to `appuser`
RUN chown -R appuser:appuser /backend

# Switch to the non-root user
USER appuser

# Existing lines for setting environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

COPY . .
RUN pip3 install -r requirements.txt